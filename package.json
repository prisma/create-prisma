{
  "name": "create-prisma",
  "version": "0.1.0",
  "description": "Create and initialize Prisma 7 projects with first-party templates and great DX.",
  "private": false,
  "type": "module",
  "bin": {
    "create-prisma": "dist/cli.mjs"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./cli": {
      "import": "./dist/cli.mjs"
    }
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.9",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "start": "bun run ./dist/cli.mjs",
    "typecheck": "tsc --noEmit",
    "bump": "bun run scripts/bump-version.ts",
    "release": "bun run bump",
    "release-notes": "bunx changelogithub"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.1",
    "@orpc/server": "^1.13.5",
    "execa": "^9.6.1",
    "fs-extra": "^11.3.3",
    "handlebars": "^4.7.8",
    "trpc-cli": "^0.12.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.3.0",
    "changelogithub": "^14.0.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3"
  }
}
