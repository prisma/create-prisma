{
  "name": "create-prisma",
  "version": "0.2.0",
  "description": "Modern Bun-first CLI to scaffold Prisma setup with adapter-aware templates.",
  "private": false,
  "type": "module",
  "bin": {
    "create-prisma": "dist/cli.mjs"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./cli": {
      "import": "./dist/cli.mjs"
    }
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.9",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "start": "bun run ./dist/cli.mjs",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "@orpc/server": "^1.13.4",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "handlebars": "^4.7.8",
    "trpc-cli": "^0.12.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/bun": "^1.3.9",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.2.0",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3"
  }
}
